<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.demo.model.AfterHeaterEntity</class>
        <class>com.example.demo.model.BeforeHeaterEntity</class>
        <class>com.example.demo.model.BurnersEntity</class>
        <class>com.example.demo.model.BurnersHasStateEntity</class>
        <class>com.example.demo.model.CityGateStationEntity</class>
        <class>com.example.demo.model.CollectorEntity</class>
        <class>com.example.demo.model.GasEntity</class>
        <class>com.example.demo.model.HeatersEntity</class>
        <class>com.example.demo.model.OrganizationEntity</class>
        <class>com.example.demo.model.PipeSizeEntity</class>
        <class>com.example.demo.model.PipeSpecificationsEntity</class>
        <class>com.example.demo.model.RunsEntity</class>
        <class>com.example.demo.model.RunsHasStateEntity</class>
        <class>com.example.demo.model.StateEntity</class>
        <class>com.example.demo.model.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cgs"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
